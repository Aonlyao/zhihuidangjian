/* pages/my/my.wxss */
.myPage{
  background: #f2f2f2;
  font-size: 12px;
}

.topInfo{
  width: 100%;
  height: 180px;
  display: flex;
  background: linear-gradient(#e64340,white)
}
.userIcon{
  width: 50px;
  height: 50px;
  margin: 30px 30px 0px;
  border: 1px solid white;
  border-radius: 50%;
}
.userInfo{
  height: 50px;
  margin-top:35px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  color: white;
}
.userName{
  font-size: 16px;
}
.jionTime{
  display: inline-block;
  margin-left: 10px;
  text-align: center;
  font-size: 12px;
  background: #646464;
  opacity: 0.5;
  width: 120px;
  height: 18px;
  line-height: 18px;
  border-radius: 10px;
}
.mySelect{
  background: white;
}
.selectItem{
  width:95%;
  height: 40px;
  line-height: 40px;
  margin: 10px auto;
  border-bottom: 1px solid #d9d9d9;
}
.selectTitle{
  margin-left: 30px;
}