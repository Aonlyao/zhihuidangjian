/* pages/study/study.wxss */
/* 全局样式 */
.studyPage{
  background: #f2f2f2;
  font-size: 12px;
}
.bannerImg{
  width: 100%;
  height: 120px;
}
/* 菜单部分 */
.studyMenu{
  width: 100%;
  height: 60px;
  display: flex;
  justify-content: space-around;
  background: white;
  padding-top: 5px;
  box-shadow: 2px 3px 4px #d9d9d9;
}
.menu_item{
  width: 52px;
  height: 50px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.menu_item image{
  width: 25px;
  height: 25px;
}
.menu_item text{
  padding-top: 5px;
}
/* 最新课程部分 */
.newClass{
  height: 200px;
  background-color: white;
  margin: 10px 0;
  padding-top: 5px;
  box-shadow: 2px 3px 4px #d9d9d9;
}
.classTitle{
  display: flex;
  margin: 10px 15px;
  align-items: center;
  justify-content: space-between;
  border-left: 2px solid #ff0000;
}
.title{
  font-size: 14px;
  margin-left: 5px;
}
.classItems{
  height: 130px;
  display: flex;
  justify-content: space-around;
}
.classContent{
  width: 140px;
  height: 120px;
  display: flex;
  flex-direction: column;
}
.classImg{
width: 140px;
height: 85px;
}
.classContent text{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-top: 5px;
}
/* 政策法规部分 */
.ruleInfo{
  height: 160px;
  background-color: white;
  margin: 10px 0;
  padding-top: 5px;
  box-shadow: 2px 3px 4px #d9d9d9;
}
.ruleItems{
  height: 120px;
}
.ruleContent{
  height: 50px;
  margin-top: 10px;
  font-size: 14px;
  padding-left:20px; 
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  border-bottom: 1px solid #d9d9d9;
}
.dateStyle{
  color: #acacac;
  font-size: 12px;
}